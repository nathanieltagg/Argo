+portlet('tridview-port','3D Display')(style='height: inherit;')
    //- #triD-view.pad.A-TriDView
    #triD-view.pad.A-ThreeTriD
    #triD-controls
      //- .trid-zoom-slider(title='Zoom in/out', style='width: 50px; display: inline-block;')
      span.trid-ctl.trid-zoom-in(title='Zoom in') Zoom In
      span.trid-ctl.trid-zoom-out(title='Zoom out') Zoom Out
      span.trid-ctl.trid-pan-left(title='Pan left (-X)') Pan -X
      span.trid-ctl.trid-pan-right(title='Pan right (+X)') Pan +X
      span.trid-ctl.trid-pan-down(title='Pan down (-Y)') Pan Down
      span.trid-ctl.trid-pan-up(title='Pan up (+Y)') Pan Up 
      span.trid-ctl.trid-pan-downstream(title='Pan downstream (-Z)') Pan Downstream
      span.trid-ctl.trid-pan-upstream(title='Pan upstream (+Z)') Pan Upstream
      input.trid-ctl.trid-animate.trid-autorotate.saveable.auto-save-on-change#trid-check1(title='Auto-rotate', type='checkbox')
      label(for='trid-check1') Spin
      span.trid-ctl.trid-reset(title='Reset view') Reset
      //- span.trid-ctl.trid-create-animation(title='Create animation (can take a long time)') Animate
      span.trid-ctl-mouse-set(style='display:inline-block;')
        input.trid-ctl.trid-ctl-mouse-rotate#trid-radio1(type='radio', name='trid-radio', value='rotate', checked='')
        label(for='trid-radio1') Mouse Rotate
        input.trid-ctl.trid-ctl-mouse-pan#trid-radio2(type='radio', name='trid-radio', value='pan')
        label(for='trid-radio2') Mouse Pan
      span.trid-ctl-view-set(style='display:inline-block;')
        input.trid-ctl.trid-ctl-view-3D#trid-radio-view1(type='radio', name='trid-radio-view', value='3D', checked='')
        label(for='trid-radio-view1' title="3d Projection") 3D
        input.trid-ctl.trid-ctl-view-xz#trid-radio-view2(type='radio', name='trid-radio-view', value='XZ')
        label(for='trid-radio-view2' title="Isomorphic XZ projection") XZ
        input.trid-ctl.trid-ctl-view-yz#trid-radio-view3(type='radio', name='trid-radio-view', value='YZ')
        label(for='trid-radio-view3' title="Isomorphic YZ projection") YZ
        input.trid-ctl.trid-ctl-view-xy#trid-radio-view4(type='radio', name='trid-radio-view', value='XY')
        label(for='trid-radio-view4' title="Isomorphic XY projection") XY

      mixin wipeslider 
          input.trid-model-wipe.saveable.auto-save-on-change(class!=attributes.class,type="range",min="-1000",max="200",default="-1000",step="1",style='width: 70px; display: inline-block; margin-right:10px;')

      span(style="display:inline-block")
          |Show cryostat: 
          +wipeslider()(class='trid-model-wipe-outer',title="Cryostat")
      span(style="display:inline-block")
          |Show PMT Array:
          +wipeslider()(class='trid-model-wipe-pmts',title="PMTs")
      span(style="display:inline-block")
          |Show fieldcage:
          +wipeslider()(class='trid-model-wipe-inner',title="Field Cage")


