mixin portlet(pid,title,hidden=false)
  .portlet(id=pid)
    .portlet-header
      span.title=title
      //- This span adds a bit of space to the right so + doesn't interfere with expand-puller
      span(style="float:right;width:10px;") &nbsp; 
      span.ui-icon.ui-icon-minusthick.icon-shrink        
      span.ui-icon.ui-icon-circle-arrow-s.download_img
      span.ui-icon.ui-icon-print
      span.ui-icon.ui-icon-arrow-4-diag.icon-explode
    .portlet-content(style=(hidden?"display:none;":""))&attributes(attributes)
      block
        
mixin modal(modalid)
  div.modal(id=modalid)
      div.modal-content
          span.modal-close.modal-closer &times;
          block


