+portlet('hithistogram-port','Hit Color')
    .A-HitHistogram(style='height: 120px')
    select.hit-hist-field.saveable#hit-hist-field
      option(value='q', selected='') Charge
      option(value='t') Time
      option(value='σq') σ Charge
      option(value='σt') σ Time
      option(value='view') View
      option(value='wire') Wire
      option(value='plane') Plane
      option(value='m') Multiplicity
    select#ctl-hit-color-scale.saveable
      option(value='RedBluePalette',    selected=(pagename!="masterclass")?"selected":null) Red-Blue
      option(value='BrownPurplePalette' selected=(pagename=="masterclass")?"selected":null) Brown-Purple
      option(value='GrayscalePalette') Grayscale
      option(value='CurtPalette') Curt's
      option(value='PhilipColorPalette') Philip's
    br
    label
      input.saveable.hit-cut-max(type='checkbox')
      |  Cut high
    label
      input.saveable.hit-cut-min(type='checkbox', checked='')
      |  Cut low
