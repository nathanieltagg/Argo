doctype html
html
  head
    meta(http-equiv='content-type', content='text/html; charset=utf-8')
    title Argo
    //(#)include virtual="basetag.inc"
    // My little icon in the link url 
    link(rel='icon', type='image/png', href='images/ArgoIcon')
    // Activate some overrides to basic configuration. 
    //#set var="PageStyle" value="standard" 
    script(type='text/javascript') // These lines pull the Server-side-include (SSI) strings.
gPageName='<!--#echo encoding="none" var="PageStyle"-->';
// This is used to get a query string supplied to the page on the server side, but hidden
// from the javascript because of a URL rewrite_mod redirect, which makes URLs prettier.
// URI encoding (server side) and decoding (javascript/clientside) prevents XSS attacks.
gHiddenQueryString=decodeURIComponent('<!--#echo encoding="url" var="QUERY_STRING"-->');
    // Main CSS sheet for basic layout, custom mods. 
    link(rel='stylesheet', href='argo.css', type='text/css', media='all')
    link(rel='stylesheet', href='selected-object-info.css', type='text/css', media='all')
    link(rel='stylesheet', href='local.css', type='text/css', media='all')
    // Javascript libraries and code. 
    //(#)include virtual="html/libraries.inc"
    //#include virtual="libraries.cgi"
    //#include virtual="shaders/shaders.inc" 
    // (#)include virtual="shaders/shaders_padgl.inc" 
  body
    #everything
      #content
        #content-top
          .important-links(style='text-align:center;')
            a(href='samspider/samspider.cgi') Browse SAM datasets
            a(href='server/file_browser.cgi') /uboone/ File Browser
            a(href='http://argo-microboone.fnal.gov/server/file_browser.cgi?path=/pnfs/uboone/data/uboone/raw/online/assembler/v6_00_00') Raw data files
            br
            a(href='http://argo-microboone.fnal.gov/live') Almost-live Data (from anywhere)
            a(href='http://ubdaq-prod-near2.fnal.gov/Argo/live') Live data (FNAL only)
            br
          div(style='float:left;')
            div(style='font-family:Arial,Verdana; font-size: 16pt; text-align:center;') Argo 2.0
            img(src='images/argo_logo_2.0.png', alt='Argo - the Microboone Web Event Display', style='height:200px;')
            br
          div(style='display: block; overflow:hidden; text-align:center;')
            a(href='help') Help and Hints
            a.align-left#Print(href='#') Print
            span.align-right
              a.linktothis Link to this event
            br
            span.align-right
              a.linkzoom Link to this event with current zoom
            br
            span.align-right#email-this-event Email this event
            br
            span.align-right#download-this-event Download this event
          div
            span(style='width: 5%;') Status:
            span#status(style='display:inline-block; width: 50%;') Script loading...
          #event-id-info(style='float:right')
            | Event:
            span.event-run
            | |
            span.event-subrun
            | |
            span.event-event
            br
            span.val.event-date unknown
            span.val.event-time unknown
            | (
            span.val.event-age unknown
            | )
          include inc/DataSource 
        // content-top 
        div(style='clear:both;')
        #content-right.dock
          include inc/ZoomControl 
          include inc/FalseColorControl 
          include inc/WireInfo 
          include inc/dEdXTool 
          include inc/HoverInfo 
        // content-right 
        #content-main
          #content-wide.dock
            //include virtual="html/WireView.inc" 
            include inc/WireViewBig 
            //include virtual="html/TimeHistogram.inc" 
            include inc/TridView 
          // content-wide 
          #content-left.dock
          // content-left 
          #content-middle.dock
            include inc/Configuration 
          // content-middle 
        // content-main 
      // content 
      // <div style="clear: both;"></div> 
      #footer
        include inc/Debugging 
        include inc/credits 
      // footer 
      // hidden stuff. 
      include inc/HitHistogram 
      include inc/MOTD 
      include inc/Keyboard 
      #hitsum
        form
          .hitsumtext(style='user-select:text; -ms-user-select:text; -moz-user-select: text;-webkit-user-select: text;')
      #warning-dialog(title='Warning')
        p#warning-dialog-message
      include inc/SelectionInfoOverlay 
      |  
      img#watermark_logo(style='display:none;', src='images/uboone_logo_1.png')
    // Everything 
